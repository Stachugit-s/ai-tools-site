---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

// Get latest blog posts
import { getCollection } from 'astro:content';
const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			{/* Hero Section */}
			<section style="max-width: 800px; margin: 0 auto; padding: 4rem 2rem; text-align: center;">
				<h1 style="font-size: 2.5rem; font-weight: bold; margin-bottom: 1rem; line-height: 1.2;">
					Find the Best AI Tools for Your Business
				</h1>
				<p style="font-size: 1.25rem; color: #666; margin-bottom: 2rem; line-height: 1.6;">
					In-depth reviews, comparisons, and guides to help you choose the right AI-powered software. 
					We test and analyze tools so you don't have to.
				</p>
				<a 
					href="/blog" 
					style="display: inline-block; background: #0066cc; color: white; padding: 1rem 2rem; border-radius: 8px; text-decoration: none; font-weight: 600; font-size: 1.1rem;"
				>
					Browse All Reviews â†’
				</a>
			</section>

			{/* Features */}
			<section style="max-width: 1000px; margin: 0 auto; padding: 3rem 2rem;">
				<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem;">
					<div style="text-align: center; padding: 1.5rem;">
						<div style="font-size: 3rem; margin-bottom: 1rem;">ðŸ“Š</div>
						<h3 style="font-size: 1.25rem; font-weight: 600; margin-bottom: 0.5rem;">Data-Driven Reviews</h3>
						<p style="color: #666;">Real performance metrics and cost analysis</p>
					</div>
					<div style="text-align: center; padding: 1.5rem;">
						<div style="font-size: 3rem; margin-bottom: 1rem;">âœ…</div>
						<h3 style="font-size: 1.25rem; font-weight: 600; margin-bottom: 0.5rem;">Honest Comparisons</h3>
						<p style="color: #666;">Unbiased tool comparisons to help you decide</p>
					</div>
					<div style="text-align: center; padding: 1.5rem;">
						<div style="font-size: 3rem; margin-bottom: 1rem;">ðŸš€</div>
						<h3 style="font-size: 1.25rem; font-weight: 600; margin-bottom: 0.5rem;">Actionable Guides</h3>
						<p style="color: #666;">Step-by-step implementation strategies</p>
					</div>
				</div>
			</section>

			{/* Latest Articles */}
			<section style="max-width: 1000px; margin: 0 auto; padding: 3rem 2rem;">
				<h2 style="font-size: 2rem; font-weight: bold; margin-bottom: 2rem; text-align: center;">
					Latest Reviews & Guides
				</h2>
				<div style="display: grid; gap: 2rem;">
					{posts.map((post) => (
						<article style="border: 1px solid #e0e0e0; border-radius: 12px; padding: 2rem; transition: box-shadow 0.3s;">
							<a href={`/blog/${post.slug}/`} style="text-decoration: none; color: inherit;">
								<h3 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 0.5rem; color: #0066cc;">
									{post.data.title}
								</h3>
								<p style="color: #666; margin-bottom: 1rem; line-height: 1.6;">
									{post.data.description}
								</p>
								<div style="display: flex; justify-content: space-between; align-items: center;">
									<span style="color: #888; font-size: 0.9rem;">
										{new Date(post.data.pubDate).toLocaleDateString('en-US', {
											year: 'numeric',
											month: 'long',
											day: 'numeric'
										})}
									</span>
									<span style="color: #0066cc; font-weight: 600;">Read More â†’</span>
								</div>
							</a>
						</article>
					))}
				</div>
				<div style="text-align: center; margin-top: 2rem;">
					<a 
						href="/blog" 
						style="color: #0066cc; font-weight: 600; font-size: 1.1rem; text-decoration: none;"
					>
						View All Articles â†’
					</a>
				</div>
			</section>

			{/* CTA Section */}
			<section style="max-width: 800px; margin: 0 auto; padding: 4rem 2rem; text-align: center; background: #f5f5f5; border-radius: 12px;">
				<h2 style="font-size: 2rem; font-weight: bold; margin-bottom: 1rem;">
					Stay Updated on the Latest AI Tools
				</h2>
				<p style="font-size: 1.1rem; color: #666; margin-bottom: 1.5rem;">
					Get weekly insights, comparisons, and exclusive deals delivered to your inbox.
				</p>
				<a 
					href="/blog" 
					style="display: inline-block; background: #0066cc; color: white; padding: 1rem 2rem; border-radius: 8px; text-decoration: none; font-weight: 600;"
				>
					Browse Reviews
				</a>
			</section>
		</main>
		<Footer />
	</body>
</html>
