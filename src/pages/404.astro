---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found - Toolgrade">
	<main class="error-page">
		<div class="container-wide">
			<div class="error-content">
				<h1 class="error-code">404</h1>
				<h2 class="error-title">Page Not Found</h2>
				<p class="error-description">Sorry, the page you're looking for doesn't exist or has been moved.</p>
				
				<div class="error-actions">
					<a href="/" class="btn-primary">
						‚Üê Go to Homepage
					</a>
					<a href="/blog" class="btn-secondary">
						Browse AI Tools Reviews
					</a>
				</div>
			</div>
		</div>
	</main>
</Layout>

<style>
	.error-page {
		background: var(--bg-primary);
		min-height: calc(100vh - 200px);
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 4rem 0;
	}

	.error-content {
		text-align: center;
		max-width: 600px;
		margin: 0 auto;
	}

	.error-code {
		font-size: 8rem;
		font-weight: 900;
		color: var(--accent);
		margin-bottom: 1rem;
		line-height: 1;
	}

	.error-title {
		font-size: 2.5rem;
		font-weight: 800;
		color: var(--text-primary);
		margin-bottom: 1rem;
	}

	.error-description {
		font-size: 1.2rem;
		color: var(--text-secondary);
		margin-bottom: 3rem;
		line-height: 1.6;
	}

	.error-actions {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.btn-primary {
		display: inline-block;
		background: var(--accent);
		color: white;
		padding: 1rem 2rem;
		border-radius: 6px;
		font-weight: 700;
		text-decoration: none;
		transition: background 0.2s;
	}

	.btn-primary:hover {
		background: var(--accent-hover);
	}

	.btn-secondary {
		display: inline-block;
		border: 2px solid var(--border-color);
		color: var(--text-primary);
		padding: 1rem 2rem;
		border-radius: 6px;
		font-weight: 700;
		text-decoration: none;
		transition: all 0.2s;
		background: var(--bg-secondary);
	}

	.btn-secondary:hover {
		border-color: var(--accent);
		color: var(--accent);
	}

	@media (max-width: 768px) {
		.error-code {
			font-size: 5rem;
		}

		.error-title {
			font-size: 1.8rem;
		}

		.error-description {
			font-size: 1rem;
		}

		.error-actions {
			flex-direction: column;
		}

		.btn-primary,
		.btn-secondary {
			width: 100%;
		}
	}
</style>
