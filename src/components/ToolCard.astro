---
interface Props {
	name: string;
	price: string;
	rating: string;
	image?: string;
	link: string;
}

const { name, price, rating, image, link } = Astro.props;
---

<div class="tool-card">
	{image && (
		<div class="tool-image">
			<img src={image} alt={name} />
		</div>
	)}
	<div class="tool-info">
		<h3>{name}</h3>
		<div class="tool-meta">
			<span class="rating">⭐ {rating}</span>
			<span class="price">{price}</span>
		</div>
		<div class="tool-content">
			<slot />
		</div>
		<a href={link} class="tool-cta">Try {name} →</a>
	</div>
</div>

<style>
	.tool-card {
		background: var(--bg-secondary);
		border: 2px solid var(--border-color);
		border-radius: 12px;
		overflow: hidden;
		margin: 2rem 0;
		transition: all 0.3s;
	}

	.tool-card:hover {
		border-color: var(--accent);
		box-shadow: 0 8px 24px rgba(0,0,0,0.12);
		transform: translateY(-2px);
	}

	.tool-image {
		height: 200px;
		overflow: hidden;
		background: var(--bg-tertiary);
	}

	.tool-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.tool-info {
		padding: 1.5rem;
	}

	.tool-info h3 {
		font-size: 1.5rem;
		font-weight: 700;
		margin-bottom: 0.75rem;
		color: var(--text-primary);
	}

	.tool-meta {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 1rem;
		padding-bottom: 1rem;
		border-bottom: 1px solid var(--border-color);
	}

	.rating {
		font-weight: 600;
		color: var(--text-primary);
	}

	.price {
		font-weight: 700;
		color: var(--accent);
		font-size: 1.1rem;
	}

	.tool-content {
		margin-bottom: 1.5rem;
		color: var(--text-secondary);
	}

	.tool-cta {
		display: inline-block;
		background: var(--accent);
		color: white;
		padding: 0.75rem 1.5rem;
		border-radius: 6px;
		font-weight: 700;
		text-decoration: none;
		transition: background 0.2s;
	}

	.tool-cta:hover {
		background: var(--accent-hover);
		text-decoration: none;
	}
</style>
