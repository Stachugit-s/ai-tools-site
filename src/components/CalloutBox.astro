---
interface Props {
  type?: 'info' | 'success' | 'warning' | 'pro' | 'con';
  title?: string;
}

const { type = 'info', title } = Astro.props;

const icons = {
  info: 'ℹ️',
  success: '✅',
  warning: '⚠️',
  pro: '✓',
  con: '✗'
};
---

<div class={`callout callout-${type}`}>
  <div class="callout-icon">{icons[type]}</div>
  <div class="callout-content">
    {title && <div class="callout-title">{title}</div>}
    <slot />
  </div>
</div>

<style>
  .callout {
    margin: 1.5rem 0;
    padding: 1.25rem;
    border-radius: 8px;
    border-left: 4px solid;
    display: flex;
    gap: 1rem;
    background: var(--callout-bg);
    border-color: var(--callout-border);
    color: var(--callout-text);
  }

  .callout-icon {
    font-size: 1.5rem;
    line-height: 1;
    flex-shrink: 0;
  }

  .callout-content {
    flex: 1;
  }

  .callout-title {
    font-weight: 700;
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
    color: var(--callout-title);
  }

  .callout :global(p) {
    margin: 0.5rem 0;
  }

  .callout :global(ul) {
    margin: 0.5rem 0;
    padding-left: 1.5rem;
  }

  .callout :global(li) {
    margin: 0.25rem 0;
  }

  /* ===== DARK MODE (default) ===== */
  
  /* Info - Dark */
  .callout-info {
    --callout-bg: rgba(59, 130, 246, 0.15);
    --callout-border: #3b82f6;
    --callout-text: #bfdbfe;
    --callout-title: #93c5fd;
  }

  /* Success - Dark */
  .callout-success {
    --callout-bg: rgba(16, 185, 129, 0.15);
    --callout-border: #10b981;
    --callout-text: #a7f3d0;
    --callout-title: #6ee7b7;
  }

  /* Warning - Dark */
  .callout-warning {
    --callout-bg: rgba(245, 158, 11, 0.15);
    --callout-border: #f59e0b;
    --callout-text: #fde68a;
    --callout-title: #fcd34d;
  }

  /* Pro - Dark */
  .callout-pro {
    --callout-bg: rgba(16, 185, 129, 0.15);
    --callout-border: #10b981;
    --callout-text: #a7f3d0;
    --callout-title: #6ee7b7;
  }

  /* Con - Dark */
  .callout-con {
    --callout-bg: rgba(239, 68, 68, 0.15);
    --callout-border: #ef4444;
    --callout-text: #fecaca;
    --callout-title: #fca5a5;
  }

  /* ===== LIGHT MODE ===== */
  
  /* Info - Light */
  :global(.light) .callout-info {
    --callout-bg: #e0f2fe;
    --callout-border: #0066cc;
    --callout-text: #0c4a6e;
    --callout-title: #075985;
  }

  /* Success - Light */
  :global(.light) .callout-success {
    --callout-bg: #d1f4e0;
    --callout-border: #28a745;
    --callout-text: #0f5132;
    --callout-title: #146c43;
  }

  /* Warning - Light */
  :global(.light) .callout-warning {
    --callout-bg: #fff3cd;
    --callout-border: #ffc107;
    --callout-text: #664d03;
    --callout-title: #856404;
  }

  /* Pro - Light */
  :global(.light) .callout-pro {
    --callout-bg: #d1f4e0;
    --callout-border: #28a745;
    --callout-text: #0f5132;
    --callout-title: #146c43;
  }

  /* Con - Light */
  :global(.light) .callout-con {
    --callout-bg: #f8d7da;
    --callout-border: #dc3545;
    --callout-text: #721c24;
    --callout-title: #a71d2a;
  }
</style>
