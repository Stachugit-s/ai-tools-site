---
interface Props {
	type?: 'info' | 'success' | 'warning' | 'pro' | 'con';
	title?: string;
}

const { type = 'info', title } = Astro.props;
---

<div class={`callout callout-${type}`}>
	{title && <div class="callout-title">{title}</div>}
	<div class="callout-content">
		<slot />
	</div>
</div>

<style>
	.callout {
		padding: 1.5rem;
		border-radius: 8px;
		margin: 2rem 0;
		border-left: 4px solid;
	}

	.callout-title {
		font-weight: 700;
		font-size: 1.1rem;
		margin-bottom: 0.75rem;
	}

	.callout-content {
		line-height: 1.7;
	}

	.callout-info {
		background: #e3f2fd;
		border-color: #2196f3;
	}

	.callout-info .callout-title {
		color: #1976d2;
	}

	.callout-success {
		background: #e8f5e9;
		border-color: #4caf50;
	}

	.callout-success .callout-title {
		color: #2e7d32;
	}

	.callout-warning {
		background: #fff3e0;
		border-color: #ff9800;
	}

	.callout-warning .callout-title {
		color: #e65100;
	}

	.callout-pro {
		background: #e8f5e9;
		border-color: #4caf50;
	}

	.callout-pro .callout-title::before {
		content: "✅ ";
	}

	.callout-con {
		background: #ffebee;
		border-color: #f44336;
	}

	.callout-con .callout-title::before {
		content: "❌ ";
	}
</style>
